{
    "compilerOptions": {
      "target": "es5",                          
      "module": "ES6",                    
      "lib": ["es6"],                     
      "allowJs": true,
      "outDir": "dist/",                          
      "rootDir": "src",
      "strict": false,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": false
    },
    "include" : [
      "src/**/*.ts"
    ],
    "exclude" : [
        "node_modules"
    ]
  }